@model ViewModels.ViewModels.RecuperarViewModel
@{
    ViewData["Title"] = "Recuperar";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";


}

<link href="~/css/signin.css" rel="stylesheet">
<br />
<br />
<br />

<body class="text-center">

    <form method="post" class="form-signin">
        <img class="mb-4" src="~/img/logo.png" alt="" width="72" height="72">
        <h1 class="h4 mb-3 font-weight-normal">Recuperar Contraseña</h1>
        <span asp-validation-for="usuario" class="text-danger"></span>

        <div class="alert alert-success" role="alert" style="display:@ViewBag.mostrar;">
            <h4 class="alert-heading">Te enviamos un Correo!</h4>
            <p>Te hemos enviado un correo con informacion para que recuperes tu cuenta!.</p>
            <hr>
            <p class="mb-0">No tendras acceso a la App sin haber activado tu cuenta! Apurate.<a asp-action="Index">Login</a></p>
        </div>
        <label asp-for="usuario" class="sr-only">Usuario</label>
        <input asp-for="usuario" class="form-control" placeholder="Usuario">

        <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">Recuperar</button>
        <a asp-action="Index" class="btn btn-success btn-lg btn-block mt-2">Volver</a>



        <p class="mt-5 mb-3 text-muted">&copy; 2020-2020</p>

    </form>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
